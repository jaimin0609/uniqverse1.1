{
    "version": 2,
    "name": "uniqverse",
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "env": {
        "NEXTAUTH_URL": "$VERCEL_URL"
    },
    "functions": {
        "app/api/**/*.js": {
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/admin",
            "destination": "/admin/dashboard",
            "permanent": false
        }
    ],
    "regions": [
        "iad1"
    ],
    "github": {
        "silent": true
    }
}